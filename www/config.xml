<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cevicapps.hciApp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HCI Notts</name>
    <description>
        A fantastic app for HCI Nottingham. With podcasts and Messages
    </description>
    <author email="victor.udeozor@cevicapps.co.uk" href="http://cevicapps.co.uk">
        Cevicapps
    </author>
    <content src="index.html" />
    <gap:platform name="ios" />
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="Orientation" value="portrait" />

    <gap:plugin name="org.apache.cordova.console" version="0.2.7" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.8" />
    <gap:plugin name="org.apache.cordova.dialogs" version="0.2.8" />
    <gap:plugin name="org.apache.cordova.network-information" version="0.2.10" />
    <gap:plugin name="org.apache.cordova.splashscreen" version="0.3.1" />
    <gap:plugin name="org.apache.cordova.statusbar" version="0.1.6" />

    <icon src="iphone/appicon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="iphone/appicon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- Settings Icon -->
    <icon src="iphone/appicon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="iphone/appicon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="iphone/appicon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="iphone/appicon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <!-- iPhone and iPod touch -->
    <gap:splash src="iphone/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="iphone/Default@2x.png" gap:platform="ios" width="640" height="960" />

    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <gap:splash src="iphone/Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

</widget>